<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ceasar.japmunchies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.AccountActivity"></activity>
        <activity
            android:name=".Activities.ChatActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".Activities.SpecificRecipeStepActivity" />
        <activity android:name=".Activities.SpecificRecipe" />
        <activity android:name=".Activities.SignUpActivity" />
        <activity android:name=".Activities.SplashScreenActivity" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.LoginActivity">

        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
    </application>

</manifest>